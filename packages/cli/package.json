        "pg": "8.11.3",
        "yargs": "17.7.2",
        "yauzl": "2.10.0"
    },

    "description": "Otrails - command line interface.",

    "devDependencies": {
        "@babel/core": "7.23.7",
        "@babel/eslint-parser": "7.23.3",
        "@babel/preset-env": "7.23.8",
        "@babel/preset-typescript": "7.23.3",
        "@types/node": "20.11.6",
        "@types/yargs": "17.0.32",
        "@types/yauzl": "2.10.3",
        "@typescript-eslint/eslint-plugin": "6.19.1",
        "@typescript-eslint/parser": "6.19.1",
        "babel-loader": "9.1.3",
        "babel-plugin-module-resolver": "4.1.0",
        "cross-env": "7.0.3",
        "eslint-import-resolver-alias": "1.1.2",
        "eslint-plugin-import": "2.29.1",
        "eslint-webpack-plugin": "4.0.1",
        "eslint": "8.56.0",
        "nodemon": "3.0.3",
        "rimraf": "3.0.2",
        "terser-webpack-plugin": "5.3.10",
        "typescript": "5.3.3",
        "webpack-cli": "5.1.4",
        "webpack-node-externals": "3.0.0",
        "webpack": "5.90.0"
    },

    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0",
        "yarn": ">=1.22.19 <2.0.0"
    },

    "homepage": "https://github.com/drmats/otrails",

    "keywords": [
        "cli",
        "database"
    ],

    "license": "BSD-2-Clause",

    "name": "@xcmats/otrails-cli",

    "private": true,

    "repository": {
        "type": "git",
        "url": "git+https://github.com/drmats/otrails.git"
    },

    "scripts": {

        "clean:modules": "rimraf node_modules",
        "clean": "rimraf ./dist",

        "vars": "cd ../common; yarn vars",

        "test": "yarn lint",
        "lint": "echo \"Linting and typechecking...\"; eslint ./src/ --ext .ts && yarn type-check",
        "type-check": "tsc --noEmit",

        "dev": "yarn build:continuous",
        "build:continuous": "nodemon -e js,ts,sql --watch ./src/ --exec \"cross-env BABEL_ENV=development webpack --progress --config=webpack.config.js\"",
        "build": "yarn test && cross-env BABEL_ENV=production webpack --progress --config=webpack.config.js",

        "cli": "yarn start",
        "start": "node --title=otrails-cli ./dist/otrails-cli.js"

    },

    "sideEffects": false,

    "type": "commonjs",

    "version": "0.0.1"

}
